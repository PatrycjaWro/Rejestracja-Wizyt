<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jan Kowalski"
        android:id="@+id/nazwisko"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/specjalizacja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_wybierz"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:text="dermatolog"
        android:textColor="@color/colorAccent"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_wybierz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nazwisko"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Wybierz"
        android:textColor="@android:color/white" />

</RelativeLayout>